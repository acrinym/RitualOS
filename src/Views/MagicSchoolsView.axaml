<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RitualOS.ViewModels"
             xmlns:help="clr-namespace:RitualOS.Helpers"
             x:Class="RitualOS.Views.MagicSchoolsView">
    <UserControl.Resources>
        <help:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:MagicSchoolsViewModel />
    </UserControl.DataContext>
    <ScrollViewer Margin="10">
        <ItemsControl ItemsSource="{Binding Schools}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Overview}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        <TextBlock Text="Practices: {Binding CommonPractices}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                        <TextBlock Text="Who is it for: {Binding WhoIsItFor}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                        <Button Content="More Info" Margin="0,5,0,0" Command="{Binding DataContext.OpenDocCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding InfoPath}" IsVisible="{Binding InfoPath, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
